<%= render_navbar do %>
  <%= link_to 'Edit', edit_admin_article_path(@article), :class => "btn btn-edit" %>
  <%= button_to (@article.published ? "Unpublish" : "Publish"), admin_article_toggle_publish_path(@article), :class => "btn btn-publish" %>
<% end %>

<%= render "articles/article", :article_counter => -1, :article => @article %>